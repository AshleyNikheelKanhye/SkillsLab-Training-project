<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ServerCallScripts/ServerCall.js"></script>
    <title>@ViewBag.Title - Training Management System</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <h1>Training Management System</h1>
    </header>
    @{ 
        DataLibrary.Entities.User currentUser = Session["CurrentUser"] as DataLibrary.Entities.User;
    }

    <nav>
        <div class="nav-container">
            <a href="#">Welcome @currentUser.FirstName </a>
            <a href="@Url.Action("EmployeeView", "Employee")">Home</a>
            <a href="@Url.Action("GetProfile", "Employee")">Profile</a>
            <a href="@Url.Action("GetTrainingView", "Employee")">Training</a>
            <a href="@Url.Action("QualificationsView", "Employee")">My Qualifications</a>
            <a href="@Url.Action("Logout", "User")">Logout</a>


        </div>

    </nav>

    <div>
        @RenderBody()
    </div>

    <footer>
        <p>&copy; 2023 Training Management System</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

