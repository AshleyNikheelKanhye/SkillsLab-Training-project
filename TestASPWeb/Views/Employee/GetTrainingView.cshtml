
@{
    ViewBag.Title = "TrainingView";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DataLibrary.Entities.User currentUser = Session["CurrentUser"] as DataLibrary.Entities.User;
}

<style>
    .card {
        border: 1px solid #3498db;
        padding: 10px;
        margin: 10px;
        width: 500px;
        display: inline-block;
    }


    .navbar {
        background-color: #3498db; /* Blue color for the navbar-like div */
        padding: 10px;
        border-bottom: 2px solid #2980b9; /* Darker blue color for the border */
        text-align: center;
        color: white;
        display: flex;
        justify-content: center; /* Center the labels horizontally */
    }

    .content {
        display: none; /* Hide all content divs by default */
        padding: 20px;
    }

    .myTrainings:checked ~ #myTrainingsContent,
    .trainingsAvailable:checked ~ #trainingsAvailableContent,
    .allTrainings:checked ~ #allTrainingsContent {
        display: block; /* Show the corresponding content div when the radio button is checked */
    }

    label {
        background-color: #2980b9; /* Dark blue color for unselected labels */
        padding: 10px;
        border-radius: 4px;
        display: inline-block; /* Display labels as inline-block elements */
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin: 0 10px; /* Adjust this value to change the spacing between labels */
    }

    input[type="radio"] {
        display: none; /* Hide the actual radio buttons */
    }

        input[type="radio"]:checked + label {
            background-color: #2c3e50; /* Slightly darker blue for selected labels */
        }


    #popUp {
        padding-block: 10px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #ffffff;
        padding: 20px;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #viewingPrerequisites {
        background-color: #ffffff;
        padding: 10px;
        border-radius: 8px;
        margin: 20px;
    }

    .TableViewsDiv {
        background-color: #ffffff;
        padding: 10px;
        border-radius: 8px;
        margin: 20px;
    }

        .TableViewsDiv table {
            border-collapse: collapse;
            width: 100%;
        }

    .classTrainingTable th, .classTrainingTable td {
        padding: 10px;
        text-align: left;
        border: 1px solid #b2dfdb;
        border-radius: 5px;
    }

    .classTrainingTable th {
        background-color: #e0f2f1;
        color: #000000;
    }

    .classTrainingTable tbody tr {
        background-color: #ffffff;
    }

        .classTrainingTable tbody tr:nth-child(even) {
            background-color: #ccffff;
        }

        .classTrainingTable tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

    .spinner-container {
        position: relative;
    }

    .spinner {
        border: 2px solid #000;
        border-top: 2px solid #fff;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 1s linear infinite;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -25px;
        margin-left: -25px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>


<script>
    $(document).ready(function () {

        $('#myTrainings').change(function () {
            $('.content').hide();
            $('div#myTrainingsContent').show();
        });


        $('#trainingsAvailable').change(function () {
            $('.content').hide();
            populateTableMyTrainings().then(() => {
                $('div#trainingsAvailableContent').show();
            });
        });


        $('#allTrainings').change(function () {
            $('.content').hide();
            populateTable().then(() => {
                $('div#allTrainingsContent').show();
            });
        });

        //dropdown for MyTrainings
        $('#mySelect').change(function () {
            var selectedOption = $(this).val();
            $('div#selectContentDiv').empty().hide();
            $('div#headerSelectDiv').empty();
            var URL = "";
            if (selectedOption == "1") {
                URL = "/Enrollment/GetFinalApprovedTrainings";
                $('div#headerSelectDiv').append('Registered Trainings');
            }
            if (selectedOption == "2") {
                URL = "/Enrollment/GetManagerApprovedTrainings";
                $('div#headerSelectDiv').append('Trainings Approved by Manager');
            }
            if (selectedOption == "3") {
                URL = "/Enrollment/GetPendingTrainings";
                $('div#headerSelectDiv').append('Trainings pending to be Approved by Manager');
            }
            if (selectedOption == "4") {
                URL = "/Enrollment/GetDeclinedTrainings"; // TODO : need to use another method to deals with getDeclinedTrainints, having ambiguity between finalStatus disapproved when managerStatus==approved.
                $('div#headerSelectDiv').append('Trainings Declined by Manager or Automatic selection');
            }
            populateDivCards(URL).then(() => {
                $('div#selectContentDiv').show();
            });

        });



        function formatDateTime(date) {
            if (date) {
                var parsedDate = new Date(parseInt(date.substr(6)));
                return parsedDate.toLocaleDateString() + ' ' + parsedDate.toLocaleTimeString();
            } else {
                return 'No date';
            }
        }

        function getAJAXCall(URL) {
            return new Promise((resolve, reject) => {
                $.ajax({
                    type: "GET",
                    url: URL,
                    data: null,
                    dataType: "json",
                    success: function (data) {
                        resolve(data);
                    },
                    error: function (data) {
                        reject(data);
                    }
                })
            });
        }

        //function to populate Table Trainings ellible to apply
        function populateTableMyTrainings() {
            return new Promise((resolve, reject) => {
                var URL = "/Training/GetAllElligilbe";
                getAJAXCall(URL).then((response) => {
                    if (response) {
                        if (response.length === 0) {
                            $('div#NoAvailableTrainingsForYou').html("<h2>Looks like there are no Trainings available for you based on your Qualifications at the moment<h2>");
                            $('div#tableTrainingsAvailable').hide();
                            $('div#NoAvailableTrainingsForYou').show();
                            resolve();
                        } else {
                            var tableBody = $("#availableTraining tbody");
                            tableBody.empty();
                            $.each(response, function (index, training) {
                                var row = '<tr>' +
                                    '<td>' + training.TrainingName + '</td>' +
                                    '<td>' + training.Capacity + '</td>' +
                                    '<td>' + formatDateTime(training.ClosingDate) + '</td>' +
                                    '<td>' + formatDateTime(training.TrainingStartDate) + '</td>' +
                                    '<td data-DepartmentID = "' + training.DepartmentID + '">' + training.DepartmentName + '</td>' +
                                    '<td> <button id ="Applybtn" value = "' + training.TrainingID + '" > Apply </button> </td>' +
                                    '</tr>';
                                tableBody.append(row);
                            });
                            $('div#NoAvailableTrainingsForYou').html("");
                            $('div#NoAvailableTrainingsForYou').hide();
                            $('div#tableTrainingsAvailable').show();
                            resolve();
                        }
                    }
                }).catch((error) => {
                    console.error(error);
                    toastr.error("error cannot load data");
                    reject();
                });
            });
        }


        //function to populate MyTrainings card divs
        function populateDivCards(URL) {
            return new Promise((resolve, reject) => {
                getAJAXCall(URL).then((response) => {
                    if (response) {
                        //populate div cards from response data
                        $("div#selectContentDiv").empty();
                        if (response.length === 0) {
                            $("div#selectContentDiv").html('<h2>You do not have any applied Trainings for this option</h2>');
                            resolve();
                        }
                        else {
                            $.each(response, function (index, enrollment) {
                                var card = $('<div class="card">');
                                card.append('<p> Training Name : ' + enrollment.TrainingName + '</p>');
                                card.append('<p> Date Registered : ' + formatDateTime(enrollment.DateRegistered) + '</p>');
                                if (enrollment.ApprovalDate !== null) {
                                    card.append('<p> Approval date : ' + enrollment.ApprovalDate + '</p>');
                                    //later add button to click to expand to see further details about training starting date.
                                }
                                card.append('<p> Training Deadline Registration Date : ' + formatDateTime(enrollment.ClosingDate) + '</p>');
                                card.append('<p> Training Start Date : ' + formatDateTime(enrollment.TrainingStartDate) + '</p>');
                                card.append('<p> Training Capacity : ' + enrollment.Capacity + '</p>');
                                card.append('<p> Training Department Favoured : ' + enrollment.DepartmentName + '</p>');
                                card.append('<p> Manager Approval Status : ' + enrollment.ManagerStatus + '</p>');
                                card.append('<p> Final Registration Status : ' + enrollment.FinalStatus + '</p>');
                                card.append('</div>');

                                $("div#selectContentDiv").append(card);
                            });
                            resolve();
                        }
                    }
                    else {
                        toastr.error("backend error");
                        reject();
                    }
                }).catch((error) => {
                    console.error(error);
                    toastr.error("error cannot load data");
                    reject();
                });
            });
        }

        //function to populate Table All trainings
        function populateTable() {
            return new Promise((resolve, reject) => {
                var URL = "/Training/getAll";
                getAJAXCall(URL).then((response) => {
                    if (response) {
                        var tableBody = $("#trainingTable tbody");
                        tableBody.empty();
                        $.each(response, function (index, training) {
                            var row = '<tr>' +
                                '<td>' + training.TrainingName + '</td>' +
                                '<td>' + training.Capacity + '</td>' +
                                '<td>' + formatDateTime(training.ClosingDate) + '</td>' +
                                '<td>' + formatDateTime(training.TrainingStartDate) + '</td>' +
                                '<td data-DepartmentID = "' + training.DepartmentID + '">' + training.DepartmentName + '</td>' +
                                '<td> <button id ="viewPrerequisites" value = "' + training.TrainingID + '" > View Prerequisites </button> </td>' +
                                '</tr>';
                            tableBody.append(row);
                        });
                        resolve();
                    }
                }).catch((error) => {
                    console.error(error);
                    toastr.error("error cannot load data");
                    reject();
                });
            });
        }

        //function to be triggered when clicking on view prerequisites button
        $("#trainingTable tbody").on("click", "#viewPrerequisites", function () {
            var URL = "/Training/GetPrerequisites";
            var row = $(this).closest("tr");
            var trainingID = $(this).val();
            var trainingobj = { trainingID: trainingID }
            var serverCall = new ServerCall({ url: URL, parameters: trainingobj, callMethod: "POST" });
            serverCall.fetchApiCall().then((response) => {
                if (response) {
                    //populate popup
                    response.result.forEach(function (p) {
                        var paragraph = document.createElement('p');
                        paragraph.textContent = 'Prerequisites Needed : ' + p.Details;
                        $('div#popupText').append(paragraph);
                    });
                    //Access value within the clicked row
                    var clickedTrainingName = row.find("td:eq(0)").text(); ///check table header position in table
                    $('div#trainingName').text("Training prerequisites for : " + clickedTrainingName);
                    $('div#divAllTrainingTable').fadeOut();
                    $('div#popup').fadeIn(1000);
                }
                else {
                    toastr.error("error loading table");
                }
            });
        });

        //when applied button is pressed
        $(document).on("click", "button#finalApplyBtn", function () {
            var selectedTrainingID = $(this).val();
            var URL = "/Enrollment/AddEnrollment";
            var trainingObj = { trainingID: selectedTrainingID };
            var serverCall = new ServerCall({ url: URL, parameters: trainingObj, callMethod: "POST" });

            // Show spinner while waiting for the backend call
            $('#applyPopUp').hide();
            var spinnerContainer = document.getElementById('spinner-container');
            spinnerContainer.innerHTML = '<div class="spinner"></div>';

            serverCall.fetchApiCall().then((response) => {
                spinnerContainer.innerHTML = '';
                if (response.result == true) {
                    var emailStatus;
                    if (response.emailResult == true) {
                        emailStatus = "Email was sent to your manager about your application";
                    } else {
                        emailStatus = "Email could not be sent to your manager";
                    }
                    Swal.fire({
                        icon: 'success',
                        title: 'Training Successfully Applied. ' + emailStatus,
                        text: 'Press OK to continue',
                        allowOutsideClick: false,
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location = "/Employee/GetTrainingView";
                        }
                    });
                }
                else {
                    toastr.error("Error, could not apply for training");
                }
            })
        });

        //function to be triggered when clicking on apply for training button
        $("#availableTraining tbody").on("click", "#Applybtn", function () {
            var row = $(this).closest("tr");
            var selectedTrainingID = $(this).val();
            var selectedTrainingName = row.find("td:eq(0)").text();
            var selectedTrainingSeatsAvailable = row.find("td:eq(1)").text();
            var selectedTrainingClosingDate = row.find("td:eq(2)").text();
            var selectedTrainingStartDate = row.find("td:eq(3)").text();
            var selectedTrainingDepartmentFavoured = row.find("td:eq(4)").text();
            // TODO : include manager full name and user's current departmentName and total number of applications

            //modify the popupdiv
            $('#trainingTitleHeader').text("Apply for Training : " + selectedTrainingName);
            var bodyText = "<h2>You Meet all the Prerequisites to enroll for this Training</h2>" +
                "<h4>Once you apply, You will need your Manager's Approval before you can be enrolled in the Training</h4>" +
                "<h4>Your Manager has to approve your request before the Training enrollment deadline : " + selectedTrainingClosingDate + "</h4>" +
                "<h4>This training favours employees in the " + selectedTrainingDepartmentFavoured + " department</h4>" +
                "<h6>Training Starting Date : " + selectedTrainingStartDate + "</h6>" +
                "<h6>Number of seats this training is accepting is : " + selectedTrainingSeatsAvailable + "</h6>" +
                "<h3>You will get Emails whenever there are changes on your application</h3>";
            $('div#applyBodyDiv').html(bodyText);
            $('button#finalApplyBtn').attr("value", selectedTrainingID);
            $('div#tableTrainingsAvailable').fadeOut();
            $('div#applyPopUp').fadeIn(500);
        });


        //close popup view prerequisites
        $(document).on("click", "button#closebtn", function () {
            $('div#trainingName').text('');
            $('div#popupText').text('');
            $('div#popup').fadeOut();
            $('div#divAllTrainingTable').fadeIn();
        });

        //cancel button when applypopup
        $(document).on("click", "button#cancelApplyBtn", function () {
            $('#trainingTitleHeader').text('');
            $('div#applyBodyDiv').html("");
            $('button#finalApplyBtn').attr("value", "");
            $('div#applyPopUp').fadeOut();
            $('div#tableTrainingsAvailable').fadeIn(500);
        });

        //I was testing to get all training with their prerequisites
        function testFunction() {
            var URL = "/Training/GetAllTrainingWithPrerequisitesAndDepartments";
            getAJAXCall(URL).then((response) => {
                console.log(response);
                alert(JSON.stringify(response));
            });
        }


        //flow
        $('#mySelect').trigger('change'); //for display my trainings

    });

</script>



